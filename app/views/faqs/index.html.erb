<p id="notice"><%= notice %></p>

<h1>Faqs</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faqs.each do |faq| %>
      <tr>
        <td><%= faq.question %></td>
        <td><%= faq.answer %></td>
        <td><%= link_to 'Edit', edit_course_module_coursework_chatbot_faq_path(:course_module_id => @course_module.id, :coursework_id => @coursework.id, :id => faq.id) %></td>
        <td><%= button_to 'Destroy', course_module_coursework_chatbot_faq_path(:course_module_id => @course_module.id, :coursework_id => @coursework.id, :id => faq.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Faq', new_course_module_coursework_chatbot_faq_path(:course_module_id => @course_module.id, :coursework_id => @coursework.id) %>

<br><br>

<%= link_to 'Back', course_module_courseworks_path(:course_module => @course_module.id) %>
