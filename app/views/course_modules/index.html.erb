<p id="notice"><%= notice %></p>

<h1>Course Modules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_modules.each do |course_module| %>
      <tr>
        <td><%= course_module.name %></td>
        <td><%= link_to 'Coursework', course_module_courseworks_path(course_module) %></td>
        <% if @current_user.lecturer_id == course_module.lecturer.lecturer_id %>
          <td><%= link_to 'Edit', edit_course_module_path(course_module) %></td>
          <td><%= button_to 'Destroy', course_module, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @current_user.lecturer? %>
  <%= link_to 'New Course Module', new_course_module_path %>
<% end %>
