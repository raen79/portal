<div
  id="course_modules_index"
  data-controller="course-modules"
  data-course-modules-notice="<%= notice %>">
    <h2>Course Modules</h2>

    <%= render 'table', :course_modules => @course_modules, :current_user => @current_user %>

    <br>

    <% if @current_user.lecturer? %>
      <div class="fixed-action-btn">
        <%= 
          link_to(
            raw('<i class="material-icons">add</i>'),
            '#new-modal',
            :class => 'create-btn btn-floating btn-large waves-effect waves-light modal-trigger',
          )
        %>
      </div>

      <%= render 'form_modal', :modal_id => 'new-modal', :new_course_module => @new_course_module %>
    <% end %>
</div>