<!DOCTYPE html>
<html>
  <head>
    <title>Portal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% unless session[:jwt].blank? %>
      <%= button_to 'Logout', :logout, :method => :delete %><br>
    <% end %>
    <%= yield %>
  </body>
</html>
